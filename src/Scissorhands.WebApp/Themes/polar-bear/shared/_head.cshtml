@{
    var site = Model.Site;
    var page = Model.Page;
}
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>@(!string.IsNullOrWhiteSpace(page.Title) ? page.Title : site.Title)</title>
  <meta name="description" content="@(!string.IsNullOrWhiteSpace(page.Description) ? page.Description : site.Description)">

  <link rel="stylesheet" type="text/css" href="@string.Join("/", site.BaseUrl, "css/themes/polar-bear/main.css")">
  <link rel="canonical" href="@string.Join("/", site.BaseUrl, page.Url).Replace("index.html", "")">
  <link rel="alternate" type="application/rss+xml" title="@site.Title" href="@string.Join("/", site.BaseUrl, "feed.xml")" />

  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=PT+Sans:400,700">
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans:300,700">
</head>
