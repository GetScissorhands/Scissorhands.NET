@model Aliencube.Scissorhands.WebApp.ViewModels.Post.PostFormViewModel
@{
    ViewBag.Title = "Write Post";
}

<div class="row">
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        Post published
    </div>
</div>

<div class="row">
    <h2>@ViewBag.Title</h2>
</div>

<form class="row" asp-controller="post" asp-action="save" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Slug"></label>
        <input class="form-control" asp-for="Slug" />
    </div>
    <div class="form-group">
        <label asp-for="Body"></label>
        <textarea class="form-control" asp-for="Body"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-info" type="submit" formaction="@Url.Action("preview")">Preview</button>
        <button class="btn btn-primary" type="submit">Publish</button>
    </div>
</form>