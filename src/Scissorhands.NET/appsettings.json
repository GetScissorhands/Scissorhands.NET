{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Verbose",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "WebAppSettings": {
    "Server": "iis",

    "MarkdownPath": "/posts",
    "HtmlPath": "/posts"
  },

  "SiteMetadataSettings": {
    "Title": "Scissorhands.NET - Cross Platform Static Blogging Engine in .NET",
    "Description": "Scissorhands.NET is the cross-platform static blogging engine written in .NET.",

    "BaseUrl": "http://getscissorhands.net",
    "BasePath": "/",

    "DateTimeFormat": "yyyy-MM-dd, HH:mm:ss",

    "Authors": [
      {
        "Name": "Joe Bloggs",
        "Bio": "I'm a writer of Scissorhands.NET.",
        "IsDefault": true
      }
    ],

    "FeedTypes": [ "rss" ],

    "Theme": "polar-bear",

    "HeaderNavigationLinks": [
      {
        "Title": "About",
        "Url": "/about.html"
      },
      {
        "Title": "Tags",
        "Url": "/tags.html"
      }
    ],

    "SocialMedia": {
      "Twitter": "https://twitter.com/getscissorhands",
      "Facebook": "https://facebook.com/getscissorhands"
    }
  }
}
